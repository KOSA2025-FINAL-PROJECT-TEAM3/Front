# AMA...Pill Frontend Environment Variables
# 이 파일을 복사하여 .env 파일을 만들고 실제 값을 입력하세요.
# Copy this file to .env and fill in the actual values.

# API 서버 설정
VITE_API_BASE_URL=http://localhost:8080
VITE_API_TIMEOUT=10000

# WebSocket 서버 설정
VITE_WS_BASE_URL=ws://localhost:8080

# 인증 관련
VITE_KAKAO_CLIENT_ID=your_kakao_client_id_here
VITE_KAKAO_REDIRECT_URI=http://localhost:5173/auth/kakao/callback

# 개발 환경
VITE_ENV=development
VITE_DEBUG=true

# 토큰 저장 위치
VITE_TOKEN_STORAGE_KEY=amapill_token
VITE_REFRESH_TOKEN_KEY=amapill_refresh_token

# 알림 설정
VITE_NOTIFICATION_TIMEOUT=5000

# 페이지 설정
VITE_ITEMS_PER_PAGE=10
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
